{
    // UI
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "material-icon-theme",

    // Fonts
    "editor.fontFamily": "Hasklig, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "terminal.integrated.fontFamily": "Iosevka Nerd Font Mono, monospace",
    "terminal.integrated.fontSize": 14,

    // VSCodeVim
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 500,
    "vim.sneak": true,
    "vim.gdefault": true,

    // Remote-Containers
    "remote.containers.workspaceMountConsistency": "delegated",

    // Rust
    // "rust-client.engine": "rust-analyzer"

    // Keymap
    "vim.leader": "\\",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "<leader>", "c", "d" ],
            "commands": [ 
                "extension.dash.customSyntax",
            ],
            "after": [ "<esc>" ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [ "<leader>", "c", "d" ],
            "commands": [ 
                "extension.dash.specific",
            ],
            "after": [ "<esc>" ]
        },
    ]
}